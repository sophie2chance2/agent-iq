{
    "manifest_version": 3,
    "name": "Click Through Recorder",
    "version": "0.0.1",
    "action": { "default_popup": "hello.html" },
    "permissions": [
      "tabs",
      "storage",
      "scripting",
      "activeTab",
      "downloads",
      "alarms"
    ],
    "host_permissions": [
      "<all_urls>",
      "http://localhost:3001/*",
      "http://localhost:3000/*",
      "https://www.stagehand.dev/*",
      "https://docs.stagehand.dev/*"
    ],
    "background": { "service_worker": "background.js", "type": "module" },
    "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }],
    "icons": { "128": "icon.png" }
  }
